{% layout "layout" %}

{% block title %}Inspiration{% endblock %}

{% block content %}
	{% collection 'inspiration' order asc %}
		{% for post in collection.items %}
			<article id='{{post.title}}'>
				<h2><a href="#{{post.title}}">{{post.title | downcase}}</a></h2>
				{{  post.body  }}
			</article>
		{% endfor %}
	{% endcollection %}
{% endblock %}